
.index-container
  .charts-title.col-md-12 个人图表库
  .charts-content
    .row
      .col-md-6
        .panel.panel-default
          .panel-heading.font-bold Spark
          .panel-body.text-center
            div(ng-init="data1=[60,40]",ui-jq="sparkline",ui-options="{{data1}}, {{params}}",class="sparkline inline",style='height:240px')
      .col-md-6
        .panel.panel-default
          .panel-heading.font-bold bar
          .panel-body.text-center
            div(ui-jq="plot",ui-options="[{ data: {{d2}}, label: 'Pressure', color: '#23b7e5' }],{{barParams}}",style="height:240px")
    .row
      .col-md-6
        .panel.panel-default
          .panel-heading.font-bold Spline
          .panel-body.text-center
            div(ui-jq="plot",ui-options="[{ data: {{d}}, points: { show: true, radius: 6}, splines: { show: true, tension: 0.45, lineWidth: 5, fill: 0 } }],{{splineParams}}",style="height:240px")
      .col-md-6
        .panel.panel-default
          .panel-heading.font-bold orderBar
          .panel-body.text-center
            div(ui-jq="plot",ui-options="[{ label: 'A', data: {{d1_1}} },{ label: 'B', data: {{d1_2}} },{ label: 'C', data: {{d1_3}} }],{{orderBarParams}}",style="height:240px")
